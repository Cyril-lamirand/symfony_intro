{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}

    <h1>Liste des produits</h1>
    {% if produits is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Quantité</th>
                    <th>Prix</th>
                    <th>Catégorie</th>
                    <th>Action</th>
                </tr>    
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>
                            <a href="{{ path('produit_edit', {'id': produit.id}) }}">
                                {{ produit.nom }}
                            </a>
                        </td>
                        <td>{{ produit.description }}</td>
                        <td>{{ produit.qte }}</td>
                        <td>{{ produit.prix }}€</td>
                        <td>{{ produit.categorie }}</td>
                        <td>
                            <a href="{{path('delete_produit', {'id': produit.id})}}">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Il n'y a aucun produit</p>
    {% endif %}

    {{ form(form_ajout) }}
    
{% endblock %}
